<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ua.net.itlabs</groupId>
    <artifactId>diasporatests</artifactId>
    <version>0.1</version>

    <properties>
        <allure.version>1.4.11</allure.version>
        <aspectj.version>1.8.5</aspectj.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <test.includeCategories></test.includeCategories>
        <test.excludeCategories></test.excludeCategories>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.codeborne</groupId>
            <artifactId>selenide</artifactId>
            <version>2.23</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>

        <dependency>
            <groupId>ru.yandex.qatools.allure</groupId>
            <artifactId>allure-junit-adaptor</artifactId>
            <version>${allure.version}</version>
        </dependency>

    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <argLine>
                        -javaagent:"${settings.localRepository}/org/aspectj/aspectjweaver/${aspectj.version}/aspectjweaver-${aspectj.version}.jar"
                    </argLine>
                    <properties>
                        <property>
                            <name>listener</name>
                            <value>ru.yandex.qatools.allure.junit.AllureRunListener</value>
                        </property>
                    </properties>

                    <groups>${test.includeCategories}</groups>
                    <excludedGroups>${test.excludeCategories}</excludedGroups>

                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.aspectj</groupId>
                        <artifactId>aspectjweaver</artifactId>
                        <version>${aspectj.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.18.1</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.2.10.v20150310</version>
                <configuration>
                    <webAppSourceDirectory>${project.build.directory}/site/allure-maven-plugin</webAppSourceDirectory>
                    <stopKey>stop</stopKey>
                    <stopPort>1234</stopPort>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>

        <profile>
            <id>buggy</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Buggy</test.includeCategories>
                <test.excludeCategories></test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>smoke</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Smoke</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>federation</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Federation</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>tags</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Tags</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>availability</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Availability</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>feed</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Feed</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>basicOperations</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.BasicOperations</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>aspects</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Aspects</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>contacts</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Contacts</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>conversations</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.Conversations</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>additionalOperations</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.AdditionalOperations</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

        <profile>
            <id>clearData</id>
            <properties>
                <test.includeCategories>ua.net.itlabs.categories.ClearData</test.includeCategories>
                <test.excludeCategories>ua.net.itlabs.categories.Buggy</test.excludeCategories>
            </properties>
        </profile>

    </profiles>

    <reporting>
        <excludeDefaults>true</excludeDefaults>
        <plugins>
            <plugin>
                <groupId>ru.yandex.qatools.allure</groupId>
                <artifactId>allure-maven-plugin</artifactId>
                <version>2.2</version>
            </plugin>
        </plugins>
    </reporting>

</project>